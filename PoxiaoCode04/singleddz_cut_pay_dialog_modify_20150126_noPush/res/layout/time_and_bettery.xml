<merge xmlns:android="http://schemas.android.com/apk/res/android">


   
    
    <ProgressBar
        android:layout_width="18dp"
        android:layout_height="10dp"
        android:progressDrawable="@drawable/bettery_progress"
        android:progress="50"
		android:layout_alignLeft="@+id/image_view_bettery"
		android:layout_alignRight="@+id/image_view_bettery"
		android:layout_alignTop="@+id/image_view_bettery"
		android:layout_alignBottom="@+id/image_view_bettery"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
        android:id="@+id/progress_bettery"
        style="?android:attr/progressBarStyleHorizontal"
        />
    
	
    <ImageView android:layout_width="18dp"
        android:layout_height="10dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="6dp"
        android:src="@drawable/bettery_bg"
         android:id="@+id/image_view_bettery"
        />
    
    
    
    <TextView
        android:id="@+id/text_view_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:50"
        android:layout_toRightOf="@+id/image_view_bettery"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="7dp"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


</merge>