<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.poxiao.ddz.standalone"
    android:layout_width="380dp"
    android:layout_height="200dp" >

    <include layout="@layout/game_dialog_box" />

    <TextView
        android:id="@+id/text_view_quit_game_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="亲，确定要退出游戏吗！"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_view_ddz_btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ddz_btn_big" />

            <ImageView
                android:id="@+id/image_view_ddz_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/image_view_ddz_btn_big"
                android:src="@drawable/text_ddz" />

            <ProgressBar
                android:id="@+id/progress_bar_download_ddz"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_view_ddz_btn_big"
                android:layout_alignLeft="@+id/image_view_ddz_text"
                android:layout_marginBottom="8dp"
                android:progressDrawable="@drawable/promote_download_progress" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp" >

            <ImageView
                android:id="@+id/image_view_qbsk_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/image_view_qbsk_btn_big"
                />

            <ProgressBar
                android:id="@+id/progress_bar_download_qbsk"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_view_qbsk_btn_big"
                android:layout_alignLeft="@+id/image_view_qbsk_text"
                android:layout_marginBottom="8dp"
                android:progressDrawable="@drawable/promote_download_progress"
                android:progress="50" />

            <ImageView
                android:id="@+id/image_view_qbsk_btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/qbsk_btn_big" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:id="@+id/layout_quit_and_Lose_money" >

        <ImageButton
            android:id="@+id/image_btn_must_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/long_btn_xml"
            android:src="@drawable/text_must_quit" />

        <ImageButton
            android:id="@+id/image_btn_cancel_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/long_btn_xml"
            android:src="@drawable/text_cancel_quit" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/image_btn_normal_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_xml"
        android:src="@drawable/text_quit" />
    
    <ImageButton
        android:id="@+id/image_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/close_icon" />

</RelativeLayout>