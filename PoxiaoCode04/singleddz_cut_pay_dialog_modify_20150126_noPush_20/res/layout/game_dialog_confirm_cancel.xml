<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.poxiao.ddz.standalone"
        android:layout_height="178dp"
        android:layout_width="340dp">


    
		
        <include layout="@layout/game_dialog_box" />
		
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text_hint_dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_view_confirm_dialog_title"/>
        
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:id="@+id/layout_btns">
            <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_xml"
            android:id="@+id/image_btn_confirm_dialog_cancel"
            android:src="@drawable/text_cancel"
            />
             <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/btn_xml"
            android:id="@+id/image_btn_confirm_dialog_confirm"
            android:src="@drawable/text_confirm"
            />
        </LinearLayout>
        
        
       
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_btns"
            android:layout_below="@+id/image_view_confirm_dialog_title"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:text="hello world,it's a longggggggggggggddddddddddddddddddddddg story,"
            android:textColor="@android:color/white"
            android:gravity="center"
            
            android:id="@+id/text_view_confirm_dialog_message"
            />
        </LinearLayout>
        <GridView 
    	
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:numColumns="2"
        
        android:visibility="visible"
        
        android:layout_centerInParent="true"
   
        
    	/>
        
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/image_view_confirm_dialog_close"/>
    </RelativeLayout>