<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="388dp"
    android:layout_height="214.66dp"
    android:background="@drawable/charge_dialog_bg" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:id="@+id/image_view_pay_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/charge_dialog_title"/>

    <GridView
        android:id="@+id/grid_view_charge"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:horizontalSpacing="0dp"
        android:layout_centerHorizontal="true"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:scrollbarThumbVertical="@drawable/level_scroll_thumb"
        android:verticalSpacing="4dp" />


    <ImageView android:id="@+id/image_view_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="356dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/pay_dialog_close"/>
</RelativeLayout>