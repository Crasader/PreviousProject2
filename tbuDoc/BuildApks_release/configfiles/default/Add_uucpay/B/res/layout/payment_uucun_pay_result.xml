<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="312dip"
        android:layout_height="100dip"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/bannerimg"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="312dip"
        android:layout_height="300dip"
        android:layout_centerInParent="true" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="288dip"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/payment_uucun_sms_pay_bg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300dip"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip" >

            <RelativeLayout
                android:id="@+id/layout_header"
                android:layout_width="fill_parent"
                android:layout_height="47dip"
                android:background="#00000000" >

                <TextView
                    android:id="@+id/title"
                    style="@style/payment_uucun_HeaderTextTitle"
                    android:paddingTop="12dip"
                    android:text="短信支付" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/layout_header"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="6dip"
                android:background="@drawable/payment_uucun_sms_msg_bg" >

                <RelativeLayout
                    android:id="@+id/payment_uucun_layout_sms_pay_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="52dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="6dip"
                    android:background="@drawable/payment_uucun_sms_markwrods_bg" >

                    <TextView
                        android:id="@+id/payment_uucun_prompt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dip"
                        android:text="支付成功"
                        android:textColor="@android:color/black"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/payment_uucun_prompt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/payment_uucun_prompt1"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="15dip"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/payment_uucun_ok"
                    android:layout_width="fill_parent"
                    android:layout_height="34dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="9dip"
                    android:layout_marginRight="9dip"
                    android:background="@drawable/payment_uucun_sms_pay_ok_btn_pressed"
                    android:text="确定"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>